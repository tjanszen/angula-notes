.row
  .col-xs-4
    form
      .form-group
        label(for='email') Email
        input#email.form-control(type='email', name='email', autofocus=true, ng-model='user.email')
      .form-group
        label(for='password1') Password
        input#password.form-control(type='password', name='password1', ng-model='user.password1')
      .form-group
        label(for='password2') Confirm Password
        input#confirm-password.form-control(type='password', name='password2', ng-model='user.password2')
      .form-group
        button#register.btn.btn-default(type='submit' ng-click='submit(user)') Register
    .col-xs-8
